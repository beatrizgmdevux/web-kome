---
const {
  variant = "primary",   // "primary" | "secondary" | "tertiary"
  href,                  // si hay href -> <a>, si no -> <button>
  type = "button",       // "button" | "submit" | "reset" (solo aplica en <button>)
  children,              // texto del bot√≥n
  class: className,      // permitir pasar class desde fuera
  ...rest                // <- AQUI: resto de props (id, aria-*, data-*, etc.)
} = Astro.props;

// Fusionar clases sin pisar las internas
const classes = ["btn", variant, className].filter(Boolean).join(" ");
---

{href ? (
  <a href={href} class={classes} {...rest}>
    {children}
  </a>
) : (
  <button type={type} class={classes} {...rest}>
    {children}
  </button>
)}
