---
// Array con las rutas y nombres de los enlaces de la navegación principal del web.
const links = [
  { href: "/", label: "Inicio" },
  { href: "/carta", label: "Carta" },
  { href: "/contacto", label: "Contacto" },

];
---

<nav class="nav">
  <div class="nav-container">
    <!-- Logo que lleva al Inicio -->
    <a href="/" class="logo-link">
      <img src="/NuevoLogoWhite250px.png" alt="Logo Asador Kome Kome" class="logo" />
    </a>

    <!-- Botón del menú hamburguesa, solo visible en móvil -->
    <button class="hamburger" id="hamburger" aria-label="Abrir menú">
        <span class="bar"></span>
        <span class="bar"></span>
        <span class="bar"></span>
    </button>


    <!-- Menú de navegación -->
    <ul class="nav-links" id="nav-links">
        {links.map(link => (
            <li><a href={link.href}>{link.label}</a></li>
        ))}
    </ul>
  </div>
</nav>

<!-- Script para controlar el menú hamburguesa y marcar el enlace activo -->
<!-- TODO: el enlace activo aún no funciona en ordenador. En móvil sí. -->
<script type="module" is:inline>
    const hamburger = document.getElementById('hamburger');
    const nav = document.getElementById('nav-links');

    // Mostrar/ocultar menú y cambiar icono
    hamburger.addEventListener('click', () => {
        nav.classList.toggle('open');
        hamburger.classList.toggle('open');
    });

    // Active link
    const currentPath = window.location.pathname;
    document.querySelectorAll('.nav-links a').forEach(link => {
        if (link.getAttribute('href') === currentPath) {
        link.classList.add('active');
        }
    });
</script>
