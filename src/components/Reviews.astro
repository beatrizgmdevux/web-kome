---
import reviews from '../data/reviews.json';
---

<section class="reviews">
    <h2>Lo que opinan nuestros clientes</h2>
    <div class="review-list">
      {reviews.map((review) => (
        <div class="review">
          <p class="review-text">“{review.text}”</p>
          <p class="review-author">– {review.author}</p>
        </div>
      ))}
    </div>
  </section>