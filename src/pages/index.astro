---
import BaseLayout from '../layouts/BaseLayout.astro';
import Button from '../components/Button.astro';
import { Picture } from 'astro:assets';
import workImg from '@/assets/buscar-trabajo.jpg';

const pageTitle = "Kome Kome";
const pageDescription = "Descubre nuestro pollo asado y los mejores camperos de Málaga en Asador Kome Kome, ubicado en Torremolinos.";
---

<BaseLayout title={pageTitle} description={pageDescription}>
  <section class="hero">
    <h2>¡Bienvenid@s al Kome Kome!</h2>
    <h4>Pollos asados 🍗, camperos 🥪 y hamburguesas 🍔 en Torremolinos</h4>

    <p>
      En Asador Kome Kome llevamos el sabor callejero al siguiente nivel.
    </p>
    <p>Disfruta de hamburguesas jugosas, camperos malagueños y nuestros famosos pollos asados hechos con ingredientes frescos.</p>
    <Button href="/carta" variant="primary" children="Nuestra carta"></Button>
  </section>

  <section class="info">
    <div class="card-container">
      <span class="material-symbols-outlined">
        schedule
      </span>
      <h3>Horario</h3>
      <h4>Abiertos de Miércoles a Domingo</h4>
      <p>12:00 a 16:00</p>
      <p>20:00 a 23:00</p>
    </div>

    <div class="card-container">
      <span class="material-symbols-outlined">
        phone_in_talk
      </span>
      <h3>Teléfono</h3>
      <p>¿Quieres pedir ya?</p>
      <Button variant="secondary" children="Llámanos" href="tel:+34952376259"></Button>
    </div>

    <div class="card-container">
      <span class="material-symbols-outlined">
        location_on
      </span>
      <h3>Ubicación</h3>
      <p>Avenida del Carmelo, 21</p>
      <Button variant="secondary" children="¿Dónde estamos?" href="/ubicacion"></Button>
    </div>

  </section>

  <section class="work">
    <div class="work-container">
      <h2>¿Quieres trabajar con nosotros?</h2>
      <p>Siempre estamos en busca de ofrecer nuevas oportunidades 😉</p>
      <Button variant="secondary" href="/trabajo" children="Envíanos tu CV"></Button>
    </div>

    <div class="work-img">
      <Picture
        src={workImg}
        formats={['avif','webp']}
        widths={[360, 480, 768, 1024]}
        sizes="(max-width: 768px) 100vw, 480px"
        alt="Cocinero/a preparando una burger jugosa en Kome Kome"
        loading="lazy"
        decoding="async"
      />
    </div>
  </section>

</BaseLayout>
