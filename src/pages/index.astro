---
import BaseLayout from '../layouts/BaseLayout.astro';
import Button from '../components/Button.astro';
import Reviews from '../components/Reviews.astro';
import Card from "../components/Card.astro";

const pageTitle = "Kome Kome";
const pageDescription = "Descubre nuestro pollo asado y los mejores camperos de Málaga en Asador Kome Kome, ubicado en Torremolinos.";
---

<BaseLayout title={pageTitle} description={pageDescription}>
  <section class="hero">
    <h2>¡Bienvenid@s al Kome Kome!</h2>
    <h4>Pollos asados 🍗, camperos 🥪 y hamburguesas 🍔 en Torremolinos</h4>

    <p>
      En Asador Kome Kome llevamos el sabor callejero al siguiente nivel.
    </p>
    <p>Disfruta de hamburguesas jugosas, camperos malagueños y nuestros famosos pollos asados hechos con ingredientes frescos.</p>
