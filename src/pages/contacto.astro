---
import Button from "../components/Button.astro";
import BaseLayout from "../layouts/BaseLayout.astro";

const pageTitle = "Contacto - Asador Kome Kome";
const pageDescription = "¿Quieres contarnos algo? Ponte en contacto con nosotros para sugerencias o comentarios.";
---

<BaseLayout title={pageTitle} description={pageDescription}>
  <section class="contact-container">
    <h1>Contacto</h1>

    <p>¿Quieres pedir o consultarnos algo?</p>
    <p>Llámanos directamente al  
      <Button href="tel:+34952376259" variant="primary" children="952 376 259"></Button>
    </p>

    <h2>¿Quieres contarnos algo?</h2>
    <form name="contact" method="POST" data-netlify="true">
      <!-- Campo oculto para Netlify -->
      <input type="hidden" name="form-name" value="contact" />

        <label for="name">Nombre</label>
        <input type="text" id="name" name="name" required />

        <label for="email">Correo electrónico</label>
        <input type="email" id="email" name="email" autocomplete="on" required />

        <label for="message">Mensaje</label>
        <textarea id="message" name="message" rows="5" placeholder="Escribe tu mensaje aquí..." required></textarea>

        <label for="file">Archivo adjunto</label>
        <input type="file" id="file" name="file" ></input>

      <Button type="submit" variant="primary" children="Enviar"></Button>
    </form>
  </section>

  <style>
    .contact-container {
      max-width: 600px;
      margin: 0 auto;
      padding: 2rem;
    }

    form {
      margin-top: 2rem;
      display: flex;
      flex-direction: column;
      gap: 1rem;
    }

    label {
      font-weight: bold;
      margin-bottom: 0.3rem;
    }

    input, textarea {
      padding: 0.6rem;
      border: 1px solid #ccc;
      border-radius: 6px;
      font-size: 1rem;
    }
  </style>
</BaseLayout>
