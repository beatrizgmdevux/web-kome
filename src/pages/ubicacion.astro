---
import BaseLayout from "../layouts/BaseLayout.astro";

const pageTitle = "Ubicación - Asador Kome Kome";
const pageDescription = "Encuentra nuestra ubicación y ven a disfrutar de nuestra comida casera.";
---

<BaseLayout title={pageTitle} description={pageDescription}>
  <section class="location-container">
    <h1>Ubicación</h1>
    <p>Estamos junto al Parque de la Batería en Torremolinos, listos para atenderte.</p>
    <p>Aquí tienes nuestra dirección:</p>
    
    <p><strong>Avenida del Carmelo, 21 - Torremolinos (Málaga)</strong></p>

    <div class="map-container">
      <iframe
        src= "https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d6404.977916444645!2d-4.5090629!3d36.614615400000005!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0xd72fb8856eebdc1%3A0xf399a48f9f5e2c92!2sAsador%20de%20pollos%20Kome%20Kome!5e0!3m2!1ses!2ses!4v1754746073166!5m2!1ses!2ses"
        width="100%"
        height="400"
        style="border:0;"
        allowfullscreen=""
        loading="lazy"
        referrerpolicy="no-referrer-when-downgrade"
      ></iframe>
    </div>
  </section>

  <style>
    .location-container {
      max-width: 800px;
      margin: 0 auto;
      padding: 2rem;
    }
    .map-container {
      margin-top: 1.5rem;
      border-radius: 8px;
      overflow: hidden;
      box-shadow: 0 2px 8px rgba(0,0,0,0.1);
    }
    iframe {
      display: block;
    }
  </style>
</BaseLayout>
